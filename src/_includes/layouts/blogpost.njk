---
layout: layouts/base.njk
pageClass: blogpost
---

<article class="blog-post">
    <h1 class="blog-title">{{title}}</h1>
    <span class="blog-metadata">
        <img class="blog-author-image" src="{{author.image}}" alt="Bilde av {{author.name}}" />
        <span class="blog-author-and-date">
            <span class="blog-author"><a href="{{author.link}}">{{ author.name }}</a></span>
            <span class="blog-date">{{ date | formatDateHuman }}</span>
        </span>
    </span>

    <article class="blog-content">
        <h2>{{description}}</h2>

        {{ content | safe }}
    </article>
</article>
